{
    "buildOptions": {
        "incremental": true
    },
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "rootDir": "./src",
        "removeComments": true,
        "pretty": true,
        "incremental": true,
        "outDir": "dist",
    },
    "include": [
        "src/index.ts",
        "src/lib/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]

}